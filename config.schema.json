{
  "pluginAlias": "Withings Sleep",
  "pluginType": "accessory",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Withings Sleep"
      },
      "port": {
        "title": "Server Port",
        "type": "string",
        "required": true,
        "default": "3000"
      },
      "hosts": {
        "title": "Authorized Hosts or Ips",
        "type": "array",
        "required": false,
        "items": {
          "title": "Hosts",
          "type": "string"
        }
      },
      "cert": {
        "title": "Path to SSL Certificate",
        "type": "string",
        "required": false
      },
      "key": {
        "title": "Path to SSL Certificate Key",
        "type": "string",
        "required": false
      }
    }
  }
}
